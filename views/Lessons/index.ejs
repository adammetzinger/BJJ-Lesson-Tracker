<%- include('../partials/header') %>


<table>
    <thead>
        <tr>
            <th>Curriculum</th>
            <th>Rounds</th>
            <th>Time</th>
            <th>Students</th>
            <th>Date</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% if (lessons.length) { %>
        <% lessons.forEach(function(l) { %>
            <tr>
                <td><%= l.curriculum %></td>
                <td><%= l.rounds %></td>
                <td><%= l.timerounds %></td>
                <td><form action="/lessons/<%= l._id %>/students" method="POST">
                    <select name="studentId">
                        <%- students.map(s => 
                            `<option value="${s._id}">${s.name}</option>`
                        ).join('') %>
                    </select>
                    <button type="submit">Add Student</button>
                </form></td>
                <td><%= l.date.toLocaleDateString() %></td>
                <td>
                    <% if (user?._id.equals(l.user)) {%>
                        <form action="/lessons/<%= l.id %>?_method=DELETE" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    <% } %>
                </td>
                <td>
                    <% if (user?._id.equals(l.user)) {%>
                        <a href="/lessons/<%= l.id %>/edit"><button>Edit</button></a>
                    <% } %>
                </td>
            </tr>
        <% }); %>
        <%} else {%>
            <p>No Lessons</p>
        <% } %>
    </tbody>
</table>


<a href="lessons/new"><button>Add Lesson</button></a>

<%- include('../partials/footer') %>